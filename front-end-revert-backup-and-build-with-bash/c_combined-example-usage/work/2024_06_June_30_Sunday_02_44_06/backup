mv .preceding_directory preceding_directory; echo '../'$(date +%Y_%m_%B_%d_%A_%H_%M_%S)'/' > succeeding_directory; mkdir $(echo $(cat succeeding_directory)); mv preceding_directory tmp; echo $(pwd) > preceding_directory; cp -r * $(echo $(cat succeeding_directory)); mv tmp preceding_directory; cd $(echo $(cat succeeding_directory)); rm tmp; rm succeeding_directory; echo $(pwd) > ../recent_directory; mv preceding_directory .preceding_directory;
